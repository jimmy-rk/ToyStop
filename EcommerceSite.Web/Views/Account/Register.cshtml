@model EcommerceSite.Web.Models.RegisterViewModel


<div class="container-fluid mx-auto mt-5 pt-5">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal text-center border border-info w-50 mx-auto", role = "form" }))
    {
        <h4 class=" bg-info text-white text-center text-uppercase  mx-auto">Register</h4>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label mx-auto" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control mx-auto" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "control-label mx-auto" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control mx-auto" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label mx-auto" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mx-auto" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label mx-auto" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control mx-auto" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label mx-auto" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mx-auto" })

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info mx-auto" value="Register" />
        </div>
    }
</div>
    