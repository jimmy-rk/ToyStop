
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}


<div class="container-fluid mx-auto mt-5 pt-5 w-50">
    
    <h2 class="text-center p-3 bg-info text-white text-uppercase">Roles</h2>
    <a class="btn btn-info " href="@Url.Action("Create", "Roles")">New Role</a>
    <a class="btn btn-info" href="@Url.Action("ManageUserRoles", "Roles")">Manage User/Role</a>
    
        <ol>
            @foreach (var role in Model)
            {

            <li class="mt-3 text-uppercase">
                <strong>@role.Name</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <span onclick="return confirm('Are you sure to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span> |
                @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
            </li>

            }
        </ol>
        
</div>