@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
@Html.AntiForgeryToken()
<ul class="nav navbar-nav ">
    <li class="nav-item mr-2">Hi @User.Identity.Name</li>
    <li class="nav-item mr-2 "><a class="text-white font-weight-bold text-decoration-none text-uppercase" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    <li class="nav-item "><i class="cartBtn fas fa-shopping-cart"><span class="productCount"></span></i></li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav ">
    
    <li class="nav-item">@Html.ActionLink("Log in/Register", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-white font-weight-bold text-decoration-none text-uppercase" })</li>
    <li class="nav-item "><i class="cartBtn fas fa-shopping-cart  "><span class="productCount"></span></i></li>
</ul>
}


