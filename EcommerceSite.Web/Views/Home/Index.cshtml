


<!-- SLIDER -->
<div id="carouselExampleIndicators" class="carousel slide mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item  active">
            @if (ConfigurationsService.Instance.GetConfig("Slider1URL").Value == null)
            {
                <img class="d-block vw-100 vh-100" src="~/Content/images/slider.jpg" alt="img1">
            }
            else
            {
                <img class="d-block vw-100 vh-100 " src="@ConfigurationsService.Instance.GetConfig("Slider1URL").Value" alt="img1" />
            }

            <div class="carousel-caption d-none d-md-block">
                <button class="btn btn-outline-info btn-lg">@Html.ActionLink("SHOP", "Index", "Shop", null, new { @class = "nav-link" })</button>
            </div>
        </div>
        <div class="carousel-item">
            @if (ConfigurationsService.Instance.GetConfig("Slider2URL").Value == null)
            {
                <img class="d-block vw-100 vh-100" src="~/Content/images/slider1.jpg" alt="Second slide">
            }
            else
            {
                <img class="d-block vw-100 vh-100 " src="@ConfigurationsService.Instance.GetConfig("Slider2URL").Value" alt="img1" />
            }

            <div class="carousel-caption d-none d-md-block ">
                <button class="btn btn-outline-danger btn-lg">@Html.ActionLink("SHOP", "Index", "Shop", null, new { @class = "nav-link" })</button>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- END SLIDER -->
<!-- IMAGE BOX -->
@if (Model.FeaturedCategories != null && Model.FeaturedCategories.Count >= 3)
{
    var firstCategory = Model.FeaturedCategories[0];
    var secondCategory = Model.FeaturedCategories[1];
    var thirdCategory = Model.FeaturedCategories[2];



    <div class="row">
        <div class="col-md-4 p-0">
            <img class="box img-fluid" src="@firstCategory.ImageURL">
            <h5 class="img-content">@firstCategory.Name</h5>
        </div>
        <div class="col-md-4 p-0">
            <img class="box img-fluid" src="@secondCategory.ImageURL">
            <h5 class="img-content">@secondCategory.Name</h5>
        </div>
        <div class="col-md-4 p-0">
            <img class="box img-fluid" src="@thirdCategory.ImageURL">
            <h5 class="img-content">@thirdCategory.Name</h5>
        </div>
    </div>


}

<!-- END IMAGE BOX -->
